pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/harishharish-hari/miniproject.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t react-express-app .'
            }
        }

        stage('Run Container') {
            steps {
                bat '''
                echo Stopping old container if running...
                docker stop react-express-app || echo No running container

                echo Removing old container if exists...
                docker rm react-express-app || echo No container to remove

                echo Starting new container...
                docker run -d -p 5000:5000 --name react-express-app react-express-app
                '''
            }
        }
    }

    post {
        success {
            echo "✅ Deployment completed successfully!"
        }
        failure {
            echo "❌ Build or deployment failed!"
        }
    }
}

